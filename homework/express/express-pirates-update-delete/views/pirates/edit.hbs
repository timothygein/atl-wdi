<h1> Edit {{pirates.description}}</h1>

<div class="row">
  <form action="/pirates/{{pirates.id}}?_method=PUT" method="POST" class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <label for="Name">Name:</label>
      <input type="text" name="name" class="form-control" value="{{pirates.name}}">
    </div>
    <div class="form-group">
      <label for="birthplace">birthplace:</label>
      <input type="text" name="birthplace" class="form-control" value="{{pirates.birthplace}}">
    </div>
    <div class="form-group">
      <label for="death_year">death_year:</label>
      <input type="text" name="death_year" class="form-control" value="{{pirates.death_year}}" />
    </div>
    <div class="form-group">
      <label for="base">base:</label>
      <input type="text" name="base" class="form-control" value="{{pirates.base}}">
    </div>
    <div class="form-group">
      <label for="nickname">nickname:</label>
      <input type="text" name="nickname" class="form-control" value="{{pirates.nickname}}">
    </div>
    <div>
      <input type="submit" value="Update Todo" class="btn btn-default">
    </div>
  </form>
</div>